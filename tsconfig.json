{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "jsx": "react",
    "noImplicitReturns": true,
    "rootDir": "src",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es7", "dom"]
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
